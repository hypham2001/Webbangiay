@model IEnumerable<Webbansach.Models.THUONGHIEU>

@{
    ViewBag.Title = "ThuongHieu";
    Layout = "~/Views/Shared/_LayoutPAdmin.cshtml";
}

<h2><b>Danh Sách Thương Hiệu</b></h2>

<table class="table">
    <tr>
        <th>
            Tên Thương Hiệu
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Điện Thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenThuongHieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                <a class="btn btn-info" href="@Url.Action("EditThuongHieu", "Admin", new { id=item.MaThuonghieu })"><i class="fas fa-edit"></i></a>
                <a class="btn btn-success" href="@Url.Action("DetailThuongHieu", "Admin", new { id=item.MaThuonghieu })"><i class="fas fa-info-circle"></i></a>
            </td>
        </tr>
    }

</table>
